# WID Platform Environment Variables
# Copy this file to .env and fill in the values.

# --- Global ---
# Set to "development", "staging", or "production"
APP_ENV=development
# Secret key for signing JWTs. Use a long, random string.
# Example: openssl rand -hex 32
JWT_SECRET=insecure-jwt-secret-replace-me

# --- PostgreSQL Database ---
POSTGRES_USER=wid_user
POSTGRES_PASSWORD=wid_password
POSTGRES_DB=wid_db
POSTGRES_HOST=postgres
POSTGRES_PORT=5432

# --- Redis ---
REDIS_HOST=redis
REDIS_PORT=6379
REDIS_PASSWORD=

# --- Service Ports (exposed locally) ---
API_GATEWAY_PORT=8080
AUTH_SERVICE_PORT=8081
USER_PROFILE_SERVICE_PORT=8082
ASSET_VAULT_SERVICE_PORT=8083
INHERITANCE_RULES_SERVICE_PORT=8084
DEATH_VERIFICATION_SERVICE_PORT=8085
NOTIFICATION_SERVICE_PORT=8086

# --- KMS/Encryption ---
# For MVP, this can be a static key. In production, use a KMS.
# Example: openssl rand -hex 32
MASTER_ENCRYPTION_KEY=master-key-replace-this-with-a-real-32-byte-key
IPFS_API_URL=http://127.0.0.1:5001 # Mocked for MVP
